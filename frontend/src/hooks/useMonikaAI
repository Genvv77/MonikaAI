import { useState } from 'react';

// 1. Define what a "Candle" looks like to make TypeScript happy
interface Candle {
    close: number;
    open?: number;
    high?: number;
    low?: number;
    timestamp?: number;
}

export const useMonikaAI = () => {
    const [loading, setLoading] = useState<boolean>(false);

    // 2. Explicitly type 'candles' as an array of Candle objects
    const getPrediction = async (candles: Candle[]) => {
        setLoading(true);
        try {
            // We extract just the closing prices to send to the server
            const prices = candles.map((c) => c.close);

            const response = await fetch("https://monikaai-production.up.railway.app/api/predict", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ prices })
            });

            const data = await response.json();
            setLoading(false);
            return data;
        } catch (e) {
            console.error("Monika API Error:", e);
            setLoading(false);
            return null;
        }
    };

    return { getPrediction, loading };
};